<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khanhdang.demo.Welcome">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Back"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#55a383"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="182dp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Hey there !"
        android:textSize="40dp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="52dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textViewIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Select your game !"
        android:textSize="40dp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/buttonGoToTruthOrDare"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewIntro"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:textStyle="italic"
        android:background="#4454b4"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:text="Truth Or Dare" />

    <Button
        android:id="@+id/buttonGoToMath"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonGoToTruthOrDare"
        android:layout_marginTop="30dp"
        android:background="#55a383"
        android:text="Math"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textAllCaps="false"
        android:textStyle="italic" />

    <Button
        android:id="@+id/buttonGoToOdd"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonGoToMath"
        android:layout_marginTop="30dp"
        android:background="#FF5733"
        android:text="Odd"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textAllCaps="false"
        android:textStyle="italic" />


</RelativeLayout>
