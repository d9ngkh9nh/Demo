<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khanhdang.demo.Math">

    <Button
        android:id="@+id/buttonBackToWelcome"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Main menu"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#55a383"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="182dp" />

    <TextView
        android:id="@+id/textViewTotalResult"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/buttonBackToWelcome"
        android:layout_alignBottom="@+id/buttonBackToWelcome"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Correct Answer"
        android:textAlignment="center"
        android:textColor="#FF5733"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewNumber1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBackToWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textColor="#4454b4"
        android:text="Quiz" />

    <EditText
        android:id="@+id/editTextNumber1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:text="0"
        android:textSize="30dp"
        android:textColor="#807371  "
        android:textAlignment="center"
        android:inputType="numberSigned"
        />

    <Button
        android:id="@+id/buttonResult"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/buttonNextQuiz"
        android:layout_alignEnd="@+id/buttonBackToWelcome"
        android:layout_alignRight="@+id/buttonBackToWelcome"
        android:layout_marginBottom="28dp"
        android:background="@drawable/done"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="182dp" />

    <Button
        android:id="@+id/buttonNextQuiz"
        android:layout_width="200dp"
        android:layout_height="153dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextNumber1"
        android:layout_marginTop="24dp"
        android:background="@drawable/quiz2" />

    <Button
        android:id="@+id/buttonHighestScore"
        android:layout_width="180dp"
        android:layout_height="60dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#4454b4"
        android:text="highest score"
        android:textColor="#ffffff"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="182dp" />

</RelativeLayout>
